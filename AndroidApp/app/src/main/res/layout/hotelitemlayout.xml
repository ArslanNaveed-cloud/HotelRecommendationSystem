<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="210dp"
    android:layout_height="210dp"
    android:layout_marginRight="7dp"
    android:background="@drawable/btnshape2"
    android:padding="2dp"

    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/hotelimage"
            android:scaleType="centerCrop"
            />
<LinearLayout
    android:layout_width="60dp"
    android:layout_height="40dp"
    android:layout_gravity="end"
    android:orientation="horizontal"
    android:id="@+id/ratingwrapper"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="#99000000"
        android:layout_gravity="center"
        >
        <TextView
            android:id="@+id/rating"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.8"
            android:text="--"
            android:textColor="#fff"
            android:textSize="14sp"
            android:textStyle="bold"

            />
        <ImageView
            android:id="@+id/star"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_001_star"
            android:layout_marginRight="5dp"
            />
    </LinearLayout>
</LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="10"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="bottom"
                android:background="#99000000"

                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/hotelname"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginLeft="5dp"
                    android:text="Usmania Restaurant Abbottabad"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#fff"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/hotellocation"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:textColor="#fff"
                    android:layout_marginLeft="5dp"
                    android:text="Usmania Restaurant Abbottabad"
                    />

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>


</LinearLayout>