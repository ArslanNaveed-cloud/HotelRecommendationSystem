<!DOCTYPE html>
<html lang="en">

  <%- include('partials/header.ejs') %>

<body id="page-top">

  <!-- Page Wrapper -->
  <div id="wrapper">

    <!-- Sidebar -->
    <%- include('partials/sidebar.ejs') %>

    <!-- End of Sidebar -->

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
      <div id="content">

        <!-- Topbar -->
        <%- include('partials/navbar.ejs') %>

        <!-- End of Topbar -->

        <!-- Begin Page Content -->
        <div class="container-fluid">

          <!-- Page Heading -->
          <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800">Add New Hotels</h1>
           
        </div>  
        <hr>
        <div class="row container">
            <div class="col-md-10">
                <% if(shouldShowAlert) { %>
                    <div class="<%=alertClass %>" role="alert">
                         <%= message %>
                      </div>
                  <% }else{
                    
                  } %>
                <form enctype = "multipart/form-data" action="/room/addRoom" method="POST" class="w-50">
                    <div class="form-group">
                        
                        <label for="title">Title*:</label>
                        <input type="text" name="title" id="title" class="form-control" value="<%= title %>" placeholder="Enter room title e.g(2 bed furnished room)" required>
                    </div><!-- ////////////////////1st field////////////-->
                   
                    <label for="description">Description*:</label>
                    <div class="form-group">
                    <textarea name="description" id="description" cols="60" rows="10" style="resize:none" required><%= description %></textarea>    
                    </div>
                    
                    <div class="form-group">
                        <label for="city">Select Hotel</label>
                        <select class="form-control" id="hotel_id" name="hotel_id" required>
                            <option value="" disabled selected>Select Hotel</option>
                            
                            <%  for(i=0;i<hotel_id.length;i++) { %>
                                <option value="<%= hotel_id[i] %>"><%=hotel_title[i] %></option>
                            
                              <% } %>
                          </select>
                                              </div>

                    <!-- ////////////////////1st field////////////-->
                    <label for="Image">Cover Image*:  <span class="text-primary">(This image will appear as title picture for your hotel)</span> </label>
                        
                    <div class="form-group">
                      <label for="file">File input</label>
                      <input type="file" name="image" class="form-control-file" required>
                      <small class="form-text text-muted" id="fileHelp"><span class="text-danger"> 3mb size</span></small>
                  </div>
                    <hr>
                    <label for="Image">Gallery Images*:</label>
                   
                    <div class="form-group mt-1">
                      <label for="file">File input</label>
                      <input type="file" name="image" class="form-control-file" multiple required>
                      <small class="form-text text-muted" id="fileHelp"><span class="text-danger"> 3mb size(Only select 4 files)</span></small>
                  </div>
                  <div class="form-group">
                        
                    <label for="title">Price*:</label>
                    <input type="text" name="price" id="price" class="form-control" value="<%= price %>" placeholder="Enter room price per/night" required>
                </div><!-- ////////////////////1st field////////////-->
                <div class="form-group">
                        
                    <label for="discount">Discount*:</label>
                    <input type="text" name="discount" id="discount" class="form-control" value="<%= discount %>" placeholder="Enter room discount" required>
                </div><!-- ////////////////////1st field////////////-->
               
                    
                                 
                    <input type="submit" value="Add Post" name="submit" class="btn btn-primary mt-2" >
                   
                </form>
            </div>
           
        </div>

        </div>
        <!-- /.container-fluid -->

      </div>
      <!-- End of Main Content -->

      <!-- Footer -->
      <footer class="sticky-footer bg-white">
        <div class="container my-auto">
          <div class="copyright text-center my-auto">
            <span>Copyright &copy;Hotel Recommender Admin Portal 2020</span>
          </div>
        </div>
      </footer>
      <!-- End of Footer -->

    </div>
    <!-- End of Content Wrapper -->

  </div>
  <!-- End of Page Wrapper -->

  <!-- Scroll to Top Button-->
  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>

  <!-- Logout Modal-->
  <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
          <button class="close" type="button" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">Ã—</span>
          </button>
        </div>
        <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
        <div class="modal-footer">
          <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
          <a class="btn btn-primary" href="/authentication/logout">Logout</a>
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap core JavaScript-->
  <%- include('partials/footer.ejs') %>
</body>

</html>
